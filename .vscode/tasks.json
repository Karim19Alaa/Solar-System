{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenGL: build project",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${fileDirname}${pathSeparator}**.cpp",
                "${file}",
                "StaticCamera.cpp",
                "Renderer.cpp",
                "Planet.cpp",
                "Star.cpp",
                "World.cpp",
                "ViewPort.cpp",
                "CompositePlanet.cpp",
                "SpaceShip.cpp",
                "SpaceFactory.cpp",
                // "$(find", "${fileDirname}", "-type", "f", "-iregex", "'.*\\.cpp')",
                // "-I${workspaceFolder}\\src",
                // "${workspaceFolder}\\src\\*.cpp",

                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lopengl32",
                "-lglu32",
                "-lfreeglut",
                "-lglew32",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}